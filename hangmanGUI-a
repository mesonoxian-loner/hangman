    private void enterButtonMouseClicked(java.awt.event.MouseEvent evt) {                                         
        try {
            int number1 =  Integer.parseInt(this.guessBox.getText());
        }
        catch (NumberFormatException e)   {
            JOptionPane.showMessageDialog(this, "Not a proper letter", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }                                        

